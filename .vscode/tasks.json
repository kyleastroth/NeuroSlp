{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean & Build",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            
            "args": [
                "--clean"
            ],
        
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "options": {
                "cwd": "${workspaceFolder}"
            },

            "problemMatcher": [
                "$gcc"
            ],
            
            "presentation": {
                "echo": true,
                "group": "Build",
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true,
                "showReuseMessage": false,
            }
        },

        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            
            "group": {
                "kind": "build",
                "isDefault": false
            },

            "options": {
                "cwd": "${workspaceFolder}"
            },

            "problemMatcher": [
                "$gcc"
            ],
            
            "presentation": {
                "echo": true,
                "group": "Build",
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true,
                "showReuseMessage": false,
            }
        },

        {
            "label": "Prepare Launch",
            "dependsOn": "Build",

            "type": "shell",
            "command": "${workspaceFolder}/build/launch.sh",
            
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            
            "presentation": {
                "echo": true,
                "group": "Launch",
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true,
                "showReuseMessage": false,
            }            
        }
    ]
}