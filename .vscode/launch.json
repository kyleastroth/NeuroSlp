{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",

            // "preLaunchTask": "Clean & Build",
            "preLaunchTask": "Prepare Launch",

            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            },

            "MIMode": "gdb",
            "filterStderr": false,
            "filterStdout": false,

            "cwd": "${input:HW_LAUNCH_CWD}",

            "stopAtEntry": false,
            "stopAtConnect": false,

            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                // "engineLogging": true,
                "moduleLoad": true,
                "exceptions": true,
            },

            "program": "${input:HW_LAUNCH_PROG}",
            "args": [ "${input:HW_LAUNCH_ARGS}" ],

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },

                { "text": "set index-cache directory ${workspaceFolder}/.cache/gdb" },
                { "text": "set index-cache enabled on" },
            ]
        }

    ],

    "inputs": [ 
        {
            "id": "HW_LAUNCH_ARGS",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/build/launchInput.json",
                "json": "content.HW_LAUNCH_ARGS",
            }
        },
        {
            "id": "HW_LAUNCH_PROG",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/build/launchInput.json",
                "json": "content.HW_LAUNCH_PROG",
            }
        },
        {
            "id": "HW_LAUNCH_CWD",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/build/launchInput.json",
                "json": "content.HW_LAUNCH_CWD",
            }
        }
    ]
}